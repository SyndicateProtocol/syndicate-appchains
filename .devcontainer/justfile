    {{_log-cmd}} "Running complete OP Stack setup sequence..."
    # PLACEHOLDER: Dependencies are handled by the prerequisites listed above
    {{_log-cmd}} "[✓] Post-setup OP script completed successfully"
    {{_log-cmd}} "Ready to bring up the OP Stack devnet with op-up"
    {{_log-end}}

# Run all Arbitrum setup steps in sequence necessary for `arb-up`
arb-network-setup: foundry-install foundry-update create-aliases
    {{_log-start}}
    {{_log-cmd}} "Setting up Arbitrum network environment..."
    @echo "[JUST] Post-setup Arbitrum script completed successfully. Ready to bring up the Arbitrum Orbit devnet with arb-up."
    {{_log-end}}

arb-sequencer-plus-setup: arb-deploy-chain arb-update-chain-address run-metabased-sequencer
    {{_log-start}}
    {{_log-cmd}} "Starting Arbitrum Sequencer setup sequence..."
    # PLACEHOLDER: Dependencies are handled by the prerequisites listed above
    {{_log-cmd}} "[✓] Arbitrum Sequencer setup completed successfully"
    {{_log-cmd}} "Sequencer is now running"
    {{_log-end}}

arb-health-check:
    {{_log-start}}
    {{_log-cmd}} "Checking Arbitrum node health..."
    curl -s -X POST -H "Content-Type: application/json" \
    --data '{"jsonrpc":"2.0","method":"net_version","id":1}' \
    {{ arb_orbit_l2_rpc_url }} || echo "[JUST] RPC endpoint not responding"
    {{_log-end}}

sequencer-health-check:
    {{_log-start}}
    {{_log-cmd}} "Checking Metabased Sequencer health..."
    curl --location {{ metabased_sequencer_url }} \
    --header 'Content-Type: application/json' \
    --data '{"jsonrpc":"2.0","method":"health","id":1}' || \
    echo "[JUST] Sequencer endpoint not responding"
    {{_log-end}}

op-translator-health-check:
    {{_log-start}}
    {{_log-cmd}} "Checking OP Translator health..."
    curl --location {{ op_translator_url }} \
    --header 'Content-Type: application/json' \
    --data '{"jsonrpc":"2.0","method":"health","id":1}' || \
    echo "[JUST] OP Translator endpoint not responding"
    {{_log-end}}

arb-test-sendRawTransaction: arb-health-check sequencer-health-check
    {{_log-start}}
    {{_log-cmd}} "Sending test raw transaction..."
    RESPONSE=$(curl --location {{ metabased_sequencer_url }} \
    --header 'Content-Type: application/json' \
    --data '{"jsonrpc":"2.0","method":"eth_sendRawTransaction","params":["0xb85902f85682038501808088ffffffffffffffff808080c001a0d555dc3a308d5bde3d5bc665796f9e7d7125c1554667325533fe237c1aa120b5a07d97dae06082d3eb7fa8966b33f6ce51d7127dcddd5da3d8be9c448a72150a90"],"id":1}')
    if echo "$RESPONSE" | grep -q "result"; then
        {{_log-cmd}} "[✓] Test transaction sent successfully"
        {{_log-cmd}} "Response: $RESPONSE"
    else
        {{_log-cmd}} "[✗] Failed to send test transaction"
        {{_log-cmd}} "Error: $RESPONSE"
        exit 1
    fi
    {{_log-end}}

# Setup and verify Arbitrum network configuration
arb-network-verify:
    {{_log-start}}
    {{_log-cmd}} "Verifying Arbitrum network configuration..."
    #!/usr/bin/env bash
    set -e

    # Create .envrc file
    just create-envrc
    [ -f {{ envrc_file }} ] || { echo "[JUST] .envrc file not created successfully"; exit 1; }

    # Set up network
    RESPONSE=$(just arb-network-setup)
    echo "[JUST] Network setup: $RESPONSE"

    # Wait for network setup to complete
    if echo "$RESPONSE" || ! grep -q "Ready to bring up the Arbitrum Orbit devnet"; then
        echo "[JUST] [✓] Network setup succeeded"
    else
        echo "[JUST] [✗] Network setup failed"
        exit 1
    fi
    {{_log-end}}

# Health check for Arbitrum node
arb-health-verify:
    {{_log-start}}
    {{_log-cmd}} "Verifying Arbitrum node health..."
    #!/usr/bin/env bash
    set -e

    # Start Arbitrum node in background if not running
    if ! nc -z localhost {{ arb_orbit_port }}; then
        {{_log-cmd}} "Arbitrum node not running, starting it..."
        just arb-up &
    fi

    # Wait for Arbitrum node to be ready via health check
    {{_log-cmd}} "Waiting for Arbitrum node to be ready..."
    until just arb-health-check | grep -q "result"; do
        sleep 10
    done
    {{_log-cmd}} "Arbitrum node is ready"
    {{_log-end}}

# Setup and verify sequencer
sequencer-verify:
    {{_log-start}}
    {{_log-cmd}} "Starting sequencer verification..."
    #!/usr/bin/env bash
    set -e

    # Run sequencer setup and capture logs
    {{_log-cmd}} "Running sequencer setup..."
    just arb-sequencer-plus-setup 2>&1 | tee /tmp/sequencer-setup.log &

    # Wait for Rust build to complete
    {{_log-cmd}} "Waiting for sequencer setup to complete..."
    while ! grep -q "Finished \`dev\` profile" /tmp/sequencer-setup.log; do
        sleep 20
        {{_log-cmd}} "Still waiting for Rust build to complete..."
    done
    {{_log-cmd}} "[✓] Rust build and sequencer setup completed successfully"
    {{_log-end}}

# Run transaction test
transaction-verify:
    {{_log-start}}
    {{_log-cmd}} "Starting transaction verification..."
    #!/usr/bin/env bash
    set -e

    {{_log-cmd}} "Running test transaction..."
    RESPONSE=$(just arb-test-sendRawTransaction)
    {{_log-cmd}} "Response: $RESPONSE"

    # Check if response contains an error
    if echo "$RESPONSE" | grep -q '"error"'; then
        {{_log-cmd}} "[✗] Transaction failed with error:"
        {{_log-cmd}} "$RESPONSE"
        exit 1
    fi

    # Check if response contains expected result
    if ! echo "$RESPONSE" | grep -q '"result"'; then
        {{_log-cmd}} "[✗] Transaction response missing result field:"
        {{_log-cmd}} "$RESPONSE"
        exit 1
    fi
    {{_log-cmd}} "[✓] Test L3 -> Arbitrum L2 transaction completed successfully"
    {{_log-end}}

# Aggregated command for CI pipeline to run all verifications
verify-all:
    {{_log-start}}
    {{_log-cmd}} "Starting full verification process..."
    #!/usr/bin/env bash
    set -e

    # Run all verification steps in sequence
    {{_log-cmd}} "Running network verification..."
    just arb-network-verify
    {{_log-cmd}} "Running health verification..."
    just arb-health-verify
    {{_log-cmd}} "Running sequencer verification..."
    just sequencer-verify
    {{_log-cmd}} "Running transaction verification..."
    just transaction-verify

    {{_log-cmd}} "[✓] All verification steps completed successfully"
    {{_log-end}}
